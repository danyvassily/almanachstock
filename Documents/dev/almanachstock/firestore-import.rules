rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // üö® R√àGLES TEMPORAIRES POUR L'IMPORT INITIAL üö®
    // ‚ö†Ô∏è  √Ä REMPLACER apr√®s l'import par les vraies r√®gles de s√©curit√©
    
    match /boissons/{documentId} {
      // Autoriser toutes les op√©rations temporairement
      allow read, write, update, delete: if true;
    }
    
    // Bloquer toutes les autres collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

